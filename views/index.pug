extends layout

block content
  h1= title
  p= descr
  div(id='tabs' class='container')
    div(class='tabs')
      a(v-on:click='activetab=1', v-bind:class='[ activetab === 1 ? \'active\' : \'\']') Image to WEBP
      a(v-on:click='activetab=2', v-bind:class='[ activetab === 2 ? \'active\' : \'\']') WEBP to image
    div(v-if='activetab === 1' class='tabcontent')
      form(method='post', enctype='multipart/form-data' action='/convertFromImage' id="convertFromImageForm")
        input(type='file', name='imageupload')
        input(type='submit', name='uploadimage', value='Upload Image')
    div(v-if='activetab === 2' class='tabcontent')
      form(method='post', enctype='multipart/form-data' action='/convertToImage' id="convertToImageForm")
        input(type='radio', name='imageType', value='gif')#gif
        label(for='gif')='GIF'
        input(type='radio', name='imageType', value='jpg')#jpg
        label(for='jpg')='JPG'
        input(type='radio', name='imageType', value='png')#png
        label(for='png')='PNG'
        input(type='file', name='imageupload')
        input(type='submit', name='uploadimage', value='Upload WebP Image')
